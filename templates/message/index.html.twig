{% extends 'base.html.twig' %}

{% block title %}Envoyer une demande d'adoption{% endblock %}

{% block body %}

    <div class="container col-9">

        {% for message in messages_to_read %}
            {% if message.expediteur == app.user %}
            <div class="card bg-light mb-3 offset-md-6" style="max-width: 18rem;">
                <div class="card-header">{{ message.expediteur }}</div>
                <div class="card-body">
                    <h5 class="card-title">{{ message.createdAt | date('d/m/Y H:i') }}</h5>
                    <p class="card-text">{{ message.content }}</p>
                </div>
            </div>
            {% else %}
                <div class="card bg-light mb-3 offset-md-3" style="max-width: 18rem;">
                    <div class="card-header">{{ message.expediteur }}</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ message.createdAt | date('d/m/Y H:i') }}</h5>
                        <p class="card-text">{{ message.content }}</p>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {{ form_start(form_message) }}
        {{ form_widget(form_message) }}
        <input class="btn btn-secondary" type="submit" value="Enregistrer">
        {{ form_end(form_message) }}
    </div>
{% endblock %}
