{% extends 'base.html.twig' %}

{%  block body %}
    <div class="card-group">
            {% for annonce in annonces %}
                <div class="card">
                    {% if annonce.firstPhoto %} <style>
                        #fa{

                            width: 200px;
                            height: 200px;
                            object-position: center;
                            object-fit: scale-down;

                        }

                    </style>
                        <img src="{{ annonce.firstPhoto.imgUrl }}" id="fa" alt="...">

                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ annonce.titre }}</h5>
                        {% for dog in annonce.dogs %}
                            <p class="card-text">Nom: {{ dog.nameOfDog }}</p>
                        {% endfor %}
                    </div>
                    <a href="{{ path('annonceById', {'id' : annonce.id}) }}" class="btn btn-secondary">Voir Détails</a>
                </div>

            {% endfor %}

        </div>

    {{ knp_pagination_render(annonces) }}

        <br><br><br><br><br><br>

        <h2 class="text-xl-center">Les dernières info</h2>


