{% extends 'base.html.twig' %}

{%  block body %}
    <div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="width: 25em">
        <div class="carousel-inner">

            {% set firstPhoto = true %}
            {% for photo in annonce.firstPhotos %}
                {% if firstPhoto %}
                    <div class="carousel-item active">
                        <img src="{{ photo.imgUrl }}" class="d-block w-100" alt="...">
                    </div>
                    {% set firstPhoto = false %}
                {% endif %}
                {% if not firstPhoto %}
                    <div class="carousel-item">
                        <img src="{{ photo.imgUrl }}" class="d-block w-100" alt="...">
                    </div>
                {% endif %}
            {% endfor %}



        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    </div>

        <br>


        <h2>Les SPA</h2>

        <div class="container">

            <img src="https://upload.wikimedia.org/wikipedia/fr/thumb/0/00/Logo_de_la_SPA_%28France%29.png/813px-Logo_de_la_SPA_%28France%29.png"
                 height="100px" width="100px">

        </div>

        <br><br><br><br><br><br><br><br><br><br>

{% endblock %}
